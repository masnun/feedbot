extends base

block head
    script(src="/static/js/controllers/home.js")
    link(rel="stylesheet" href="http://getbootstrap.com/examples/jumbotron-narrow/jumbotron-narrow.css")

block content
    div.container
        div.header
            ul(class="nav nav-pills pull-right" role="tablist")
                li(role="presentation" class="active"): a(href="#") Home
                li(role="presentation"): a(href="#") About
                li(role="presentation"): a(href="#") Contact

            h3(class="text-muted") Feedbot




        div(ng-controller="HomeController")#links
            ul(ng-repeat="article in articles")
                li: a(href="{{article.link}}" target="_blank") {{article.title}}


